<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovilExam.Pages.PostView.PostEditPage"
             Title="Edit Post">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="0,10,0,0">
                <Button x:Name="btnBack" Text="Back" Clicked="BtnBack_Clicked" HorizontalOptions="StartAndExpand"/>
            </StackLayout>
            <Label 
                Text="Edit Post"
                FontSize="Large"
                HorizontalOptions="Center" 
                Margin="0,0,0,20"/>

            <Label Text="User" />
            <Picker x:Name="userPicker" Title="Select a user" />

            <Label Text="Title" Margin="0,10,0,0" />
            <Entry x:Name="txtTitle" Placeholder="Enter the title" />

            <Label Text="Content" Margin="0,10,0,0" />
            <Editor x:Name="txtContent" Placeholder="Enter the content" HeightRequest="100"/>

            <Button 
                Text="Update Post" 
                BackgroundColor="DodgerBlue"
                TextColor="White"
                Margin="0,20,0,0"
                Clicked="BtnUpdate_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
